@model TechStock.Models.Brand

@{
    ViewData["Title"] = "Varumärkesdetaljer";
}

<h2>Varumärkesdetaljer</h2>

<hr />

<h3>Produkter med detta varumärke</h3>
<!-- Kontrollera om det finns några produkter med varumärket och skriv ut dem i en tabell -->
@if (Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Products.First().ArticleNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Products.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Products.First().StockStatus)</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loopa igenom alla produkter med varumärket -->
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ArticleNumber</td>
                    <td>@product.Name</td>
                    <td>@product.StockStatus</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Visa</a> |
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Redigera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Det finns inga produkter med detta varumärke.</p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Redigera</a> |
    <a asp-action="Index">Tillbaka till lista</a>
</div>
