@model TechStock.Models.Brand

@{
    ViewData["Title"] = "Redigera varumärke";
}

<!-- Formulär för att redigera varumärke -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h2 class="mb-3 mt-3 h4">Redigera varumärke</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <!-- Namn på varumärket -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ange varumärkesnamn" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Knappar för att spara och gå tillbaka -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Tillbaka
                            </a>
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-save"></i> Spara ändringar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
