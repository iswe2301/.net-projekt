@model TechStock.Models.Brand

@{
    ViewData["Title"] = "Radera varumärke";
}

<div class="container mt-4">
    <!-- Rubrik och namn på varumärket med varningsikon/styling -->
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Radera varumärke</h2>
    <h3 class="fw-bold">@Model.Name</h3>

    <!-- Varningstext -->
    <div class="alert alert-danger mt-3 mb-3" role="alert">
        <h4 class="alert-heading">Är du säker på att du vill radera detta varumärke?</h4>
        <p>Denna åtgärd kan inte ångras. Om du raderar varumärket kommer all information att försvinna.</p>
    </div>

    <!-- Knappar för åtgärder -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Radera</button>
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x-circle"></i> Avbryt</a>
    </form>
</div>
