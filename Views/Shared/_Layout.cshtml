<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStock</title>
    <script type="importmap"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Egen CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#ced4da">
</head>

<body>
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-xl navbar-dark bg-dark shadow-sm pt-3 w-100">
            <div class="container-fluid px-3 align-items-start">
                <!-- Logotyp -->
                <a class="navbar-brand d-flex align-items-center px-2" asp-area="" asp-controller="Product"
                    asp-action="Index">
                    <em class="bi bi-laptop me-2"></em>
                    <h1 class="h4 mb-0">TechStock</h1>
                </a>

                <!-- Navbar Toggle (för mobila enheter) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar länkar -->
                <div class="collapse navbar-collapse justify-content-end align-items-start" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <!-- Navigeringslänkar med kontroll för aktiv sida för länkstyling -->
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                asp-area="" asp-controller="Product" asp-action="Index">
                                <em class="bi bi-house-door"></em> Hem
                            </a>
                        </li>
                        <!-- Om användaren är inloggad -->
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" && ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")"
                                    asp-area="" asp-controller="Product" asp-action="Products">
                                    <em class="bi bi-box"></em> Produkter
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Category" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                    asp-area="" asp-controller="Category" asp-action="Index">
                                    <em class="bi bi-list"></em> Kategorier
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Brand" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                    asp-area="" asp-controller="Brand" asp-action="Index">
                                    <em class="bi bi-tags"></em> Varumärken
                                </a>
                            </li>
                        }
                    </ul>
                    <!-- Rendera _LoginPartial  -->
                    <div class="d-flex flex-column align-items-end">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Rendera huvudinnehåll -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-4 mt-4">
        <div class="container">
            <p class="mb-2">&copy; 2025 - TechStock</p>
            <p>
                <em class="bi bi-envelope"></em>
                <a href="mailto:info@techstock.com" class="text-white">info@techstock.com</a>
            </p>
            <div>
                <a href="https://facebook.com/" class="text-white me-3" aria-label="Besök vår hemsida">
                    <em class="bi bi-facebook"></em>
                </a>

                <a href="https://x.com/" class="text-white me-3" aria-label="Besök vår X-sida">
                    <em class="bi bi-twitter-x"></em>
                </a>

                <a href="https://instagram.com/" class="text-white me-3" aria-label="Besök vår Instagram-sida">
                    <em class="bi bi-instagram"></em>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- PWA -->
    <script src="/js/pwa.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
