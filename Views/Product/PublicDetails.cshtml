@model TechStock.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <!-- Produktens namn som rubrik -->
    <h2>@Model.Name</h2>

    <div class="row">
        <div class="col-md-6 mb-4">
            <!-- Produktbild eller placeholder -->
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="~/images/@Model.ImageName" class="img-fluid rounded w-100" style="max-height: 500px; object-fit: cover;" alt="@Model.Name">
            }
            else
            {
                <img src="~/images/placeholder.png" class="img-fluid rounded" alt="Ingen bild tillgängling">
            }
        </div>

        <div class="col-md-6">
            <!-- Lagerstatus visas som en badge beroende på status -->
            @if (Model.StockStatus == "I lager")
            {
                <p class="mb-3"><span class="badge bg-success px-3 py-2"><i class="bi bi-check-circle"></i> I
                        lager</span></p>
            }
            else if (Model.StockStatus == "Få kvar")
            {
                <p class="mb-3"><span class="badge bg-warning px-3 py-2 text-dark"><i class="bi bi-exclamation-circle"></i> Få
                        kvar</span></p>
            }
            else if (Model.StockStatus == "Slut i lager")
            {
                <p class="mb-3"><span class="badge bg-danger px-3 py-2"><i class="bi bi-x-circle"></i> Slut i
                        lager</span></p>
            }
            <p><strong>Pris:</strong> @Model.Price.ToString("F2") kr</p>
            <p><strong>Kategori:</strong> @Model.Category?.Name</p>
            <p><strong>Varumärke:</strong> @Model.Brand?.Name</p>
            <p><strong>Produktbeskrivning</strong></p>
            <p>@Model.Description</p>

            <!-- Tillbaka-knapp/länk -->
            <a asp-action="index" class="btn btn-secondary mt-3"><i class="bi bi-arrow-left"></i> Tillbaka till startsida</a>
        </div>
    </div>
</div>
