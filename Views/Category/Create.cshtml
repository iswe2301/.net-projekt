@model TechStock.Models.Category

@{
    ViewData["Title"] = "Lägg till kategori";
}

<!-- Formulär för att lägga till kategori -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h2 class="mb-3 mt-3 h4">Lägg till kategori</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        @Html.AntiForgeryToken()

                        <!-- Namn på kategorin -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ange kategorinamn" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Knappar för att spara och gå tillbaka -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <em class="bi bi-arrow-left"></em> Tillbaka
                            </a>
                            <button type="submit" class="btn btn-primary btn-sm">
                                <em class="bi bi-plus-circle"></em> Lägg till kategori
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}