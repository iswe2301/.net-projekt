@model TechStock.Models.Category

@{
    ViewData["Title"] = "Radera kategori";
}

<div class="container mt-4">
    <!-- Rubrik och namn på kategorin med varningsikon/styling -->
    <h2 class="text-danger"><em class="bi bi-exclamation-triangle"></em> Radera kategori</h2>
    <h3 class="fw-bold">@Model.Name</h3>

    <!-- Varningstext -->
    <div class="alert alert-danger mt-3 mb-3" role="alert">
        <h4 class="alert-heading">Är du säker på att du vill radera denna kategori?</h4>
        <p>Denna åtgärd kan inte ångras. Om du raderar kategorin kommer all information att försvinna.</p>
    </div>

    <!-- Knappar för åtgärder -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><em class="bi bi-trash"></em> Radera</button>
        <a asp-action="Index" class="btn btn-outline-secondary"><em class="bi bi-x-circle"></em> Avbryt</a>
    </form>
</div>
